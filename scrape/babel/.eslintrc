{
  "parser ": "babel-eslint",
  "ecmaFeatures": {
    "modules": true,
    "generators": true
  },
  "plugins": [
    "babel"
  ],
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "no-console": 0,
    "babel/generator-star-spacing": [1, "after"],
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended"
}
